#include <LECTURA_ANALOGICA_PIC12F675.h>
#define PCF_SDA  PIN_A1
#define PCF_SCL  PIN_A0
#use i2c(master, sda=PCF_SDA, scl=PCF_SCL)
#define PCF_ID   0X27
#define PCF      64  // Puede ser 112 ó 64 (PCF8574T=64, PCF8574A=112, PCF8574=64)
#define blacking  P3
#define LCD_RS    P0
#define LCD_RW    P1 
#define LCD_E     P2
#define LCD_DB4   P4
#define LCD_DB5   P5
#define LCD_DB6   P6
#define LCD_DB7   P7
///////////////
#include <LCD_PCF.c>
Const char Letra1[8]= 
{
   0b00000,
   0b11011,
   0b11011,
   0b00000,
   0b11111,
   0b11111,
   0b01110,
   0b00000
};
char i;
INT X;
void main()
{
 lcd_init();
 CGRAM_x(5);
 for(i=0;i<=7 ;i++) 
 lcd_send_byte(1,Letra1[i]);
 setup_adc_ports(sAN2);
 setup_adc(ADC_CLOCK_INTERNAL);
 INT16 analogico; 
 int8  temperatura;
   while(TRUE)
   {
      set_adc_channel(2);
      delay_ms(20);
      analogico = read_adc();
      temperatura = analogico * 5 * 100 / 1024;
      delay_ms(100);
      lcd_gotoxy(1,1);
      lcd_putc("JOSE ID 16/04/22");
      lcd_gotoxy(1,2);
      lcd_putc("TEMPERATURA:");
      delay(100);
      printf(lcd_putc," %u ", temperatura);
      delay_ms(1000);
      

   }

}
