//-------

void glcd_imagen()
{
   char i,j;
   signed char k;
   for( i = 0 ; i < 64 ; i ++ )
   { 
      for( j = 0 ; j < 16 ; j ++)
      {   
         for(k=7;k>-1;k--)
         {     
            if( bit_test(imagen[i][j] ,7-k ))
               glcd_pixel( j*8+k,i, ON );
               
         } 
      }
   }
}
void glcd_imagen2()
{
   char i,j;
   signed char k;
   for( i = 0 ; i < 64 ; i ++ )
   { 
      for( j = 0 ; j < 16 ; j ++)
      {   
         for(k=7;k>-1;k--)
         {     
            if( bit_test(tractor[i][j] ,7-k ))
               glcd_pixel( j*8+k,i, ON );
               
         } 
      }
   }
}

/////////////////////////////////////////////////////////

void main()
{

delay_ms(1000);

glcd_init(ON);   // iniciamos la lcd
glcd_fillScreen(0); //LIMPIAMOS LA PANTALLA
 glcd_imagen2(); 


     
while(TRUE){

            glcd_imagen();     //Llamamos a la funcion imagen para dibujar
            delay_ms(4000);  // en el Display gráfico
            glcd_fillScreen(0); //LIMPIAMOS LA PANTALLA
       
          }//end while //Ciclo infinito


}//end main
